@model Internet_magazin.ViewModels.CreateOrderVM
<h2 class="mb-5">Оформление заказа</h2>

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Order" />
                    <div class="form-group row ">
                        <label asp-for="Name" for="name" class="col-md-4 col-form-label text-md-right">Имя</label>
                        <div class="col-md-6">
                            <input asp-for="Name" type="text" id="name" class="form-control" name="name" required>
                            <span asp-validation-for="Name" />
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label asp-for="LastName" for="lastName" class="col-md-4 col-form-label text-md-right">Фамилия</label>
                        <div class="col-md-6">
                            <input asp-for="LastName" type="text" id="lastName" class="form-control" name="lastName" required>
                            <span asp-validation-for="LastName" />
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label asp-for="Address" for="Address" class="col-md-4 col-form-label text-md-right">Адрес для доставки</label>
                        <div class="col-md-6">
                            <input asp-for="Address" type="text" id="Address" class="form-control" name="Address" required>
                            <span asp-validation-for="Address" />
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label asp-for="PhoneNumber" for="PhoneNumber" class="col-md-4 col-form-label text-md-right">Телефон</label>
                        <div class="col-md-6">
                            <input asp-for="PhoneNumber" type="text" id="PhoneNumber" class="form-control" name="PhoneNumber" required>
                            <span asp-validation-for="PhoneNumber" />
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label asp-for="Email" for="Email" class="col-md-4 col-form-label text-md-right">Эл. почта</label>
                        <div class="col-md-6">
                            <input asp-for="Email" type="text" id="Email" class="form-control" name="Email" required>
                            <span asp-validation-for="Email" />
                        </div>
                    </div>
                    <div class="col-md-6 offset-md-4">
                        <button type="submit" class="btn btn-primary">Завершить оформление заказа</button>
                        <a class="btn-danger" asp-action="Index" asp-controller="Home">Отмена</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>